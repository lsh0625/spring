<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.spring.mapper.TodoMapper">
    <select id="getTime" resultType="string">select now()</select>
    <insert id="insert">
        insert into todo(title,dueDate, writer) values (#{title}, #{dueDate}, #{writer})
    </insert>
    <select id="selectAll" resultType="org.zerock.spring.domain.TodoVO">
        select * from todo order by tno desc
    </select>
    <select id="selectOne" resultType="org.zerock.spring.domain.TodoVO">
            select * from todo where tno=#{tno}
    </select>
    <delete id="delete">
        delete from todo where tno=#{tno}
    </delete>
    <update id="update">
        update todo set title=#{title},dueDate=#{dueDate},finished=#{finished} where tno=#{tno}
    </update>
    <select id="selectList" resultType="org.zerock.spring.domain.TodoVO">
        select * from todo order by tno desc limit #{skip}, #{size}
    </select>
    <select id="getCount" resultType="int">
        select count(tno) from todo
    </select>
</mapper>